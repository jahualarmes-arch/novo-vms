        </Border>

        <!-- Content Area with Tabbed Views -->
        <Grid Grid.Row="1">
            <!-- Dashboard View -->
            <views:ModernDashboardView x:Name="DashboardView" Visibility="Visible"/>

            <!-- Devices View -->
            <views:ModernDevicesView x:Name="DevicesView" Visibility="Collapsed"/>

