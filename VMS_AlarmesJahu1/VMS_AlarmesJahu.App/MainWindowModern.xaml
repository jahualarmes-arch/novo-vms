                <!-- Navigation Tabs -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button x:Name="BtnDashboard" 
                            Style="{DynamicResource ModernNavButton}"
                            Content="ðŸ“Š Dashboard"
                            Click="OnDashboardClick"
