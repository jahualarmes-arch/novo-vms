                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="40" Height="40" CornerRadius="8" Background="{DynamicResource AccentBrush}" Margin="0,0,12,0">
                        <TextBlock Text="VMS" Foreground="White" FontWeight="Bold" FontSize="16" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="VMS Alarmes Jahu" FontWeight="SemiBold" FontSize="16" 
                                   Foreground="White"/>
