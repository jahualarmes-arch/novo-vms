                <!-- Status and Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Spacing="10">
                    <Border Background="White" Opacity="0.15" BorderThickness="0" CornerRadius="6" Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Fill="#2E7D32" VerticalAlignment="Center"/>
                            <TextBlock x:Name="StatusText" Text="Sistema Online" FontSize="12" Foreground="White"/>
