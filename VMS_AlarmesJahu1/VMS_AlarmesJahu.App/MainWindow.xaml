<Window x:Class="VMS_AlarmesJahu.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:VMS_AlarmesJahu.App.Views"
        Title="VMS Alarmes Jahu" Width="1600" Height="1000"
        Background="{DynamicResource Bg}" Foreground="{DynamicResource FgPrimary}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar (SmartPSS-like) -->
        <Border Grid.Row="0" Background="{DynamicResource Panel}" BorderBrush="{DynamicResource Border}" BorderThickness="0,0,0,1">
            <Grid Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App / Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="28" Height="28" CornerRadius="6" Background="{DynamicResource PrimaryGradient}" Margin="0,0,10,0">
                        <TextBlock Text="V" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="VMS Alarmes Jahu" FontWeight="SemiBold" FontSize="15" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Tabs -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0">
                    <ToggleButton x:Name="BtnTabHome" Style="{DynamicResource TopTabBtn}" IsChecked="True" Content="InÃ­cio"/>
                    <ToggleButton x:Name="BtnTabLive" Style="{DynamicResource TopTabBtn}" Content="Exib. ao vivo"/>
                    <ToggleButton x:Name="BtnTabManage" Style="{DynamicResource TopTabBtn}" Content="Gerenciamento"/>
                </StackPanel>

                <!-- Right actions / status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{DynamicResource Card}" BorderBrush="{DynamicResource Border}" BorderThickness="1" CornerRadius="8" Padding="10,6" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="IaIndicator" Width="10" Height="10" Fill="#7C8896" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="IA" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock x:Name="TxtIaStatus" Text="Parada" Opacity="0.75" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="BtnToggleIa" Style="{DynamicResource SmallPrimaryBtn}" Content="Iniciar IA" Margin="0,0,10,0"/>

                    <Button Content="ðŸ””" Width="36" Height="36" ToolTip="NotificaÃ§Ãµes"/>
                    <Button Content="âš™" Width="36" Height="36" ToolTip="ConfiguraÃ§Ãµes" x:Name="BtnQuickSettings" Margin="6,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="1" x:Name="BodyGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="ColLeft" Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left panel (SmartPSS-like tree) -->
            <Border Grid.Column="0" x:Name="LeftPanel" Background="{DynamicResource Panel}" BorderBrush="{DynamicResource Border}" BorderThickness="0,0,1,0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="OrganizaÃ§Ãµes" FontWeight="SemiBold" Margin="6,6,0,8"/>

                    <Border Grid.Row="1" Background="{DynamicResource Card}" BorderBrush="{DynamicResource Border}" BorderThickness="1" CornerRadius="8" Padding="10,6" Margin="0,0,0,10">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="ðŸ”Ž" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBox x:Name="TxtTreeSearch" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" 
                                     Foreground="{DynamicResource FgPrimary}" Text="Pesquisar..." Opacity="0.75"/>
                        </DockPanel>
                    </Border>

                    <TreeView Grid.Row="2" x:Name="TvOrg" Background="Transparent" BorderThickness="0"/>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,10,0,0">
                        <Button x:Name="BtnTreeAdd" Content="+ Adic." Padding="10,6" Margin="0,0,6,0"/>
                        <Button x:Name="BtnTreeDel" Content="ðŸ—‘ Excluir" Padding="10,6"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Border Grid.Column="1" Background="{DynamicResource Bg}" Padding="16">
                <ContentControl x:Name="ContentHost"/>
            </Border>
        </Grid>
    </Grid>
</Window>
