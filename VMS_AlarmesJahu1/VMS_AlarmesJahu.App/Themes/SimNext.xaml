<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/materialdesign">

    <!-- ===== CORES SIM NEXT INTELBRAS ===== -->
    
    <!-- Cores Primárias -->
    <Color x:Key="SimNextPrimary">#004B94</Color>          <!-- Azul Intelbras -->
    <Color x:Key="SimNextPrimaryLight">#1565C0</Color>     <!-- Azul Claro -->
    <Color x:Key="SimNextPrimaryDark">#003D7A</Color>      <!-- Azul Escuro -->
    <Color x:Key="SimNextAccent">#FF6F00</Color>           <!-- Laranja Accent -->
    
    <!-- Cores Neutras -->
    <Color x:Key="SimNextBackground">#FFFFFF</Color>       <!-- Branco -->
    <Color x:Key="SimNextSurface">#F5F5F5</Color>          <!-- Cinza Claro -->
    <Color x:Key="SimNextSurfaceDark">#EEEEEE</Color>      <!-- Cinza Médio -->
    <Color x:Key="SimNextBorder">#E0E0E0</Color>           <!-- Borda -->
    <Color x:Key="SimNextTextPrimary">#212121</Color>      <!-- Texto Escuro -->
    <Color x:Key="SimNextTextSecondary">#757575</Color>    <!-- Texto Secundário -->
    <Color x:Key="SimNextTextMuted">#BDBDBD</Color>        <!-- Texto Desabilitado -->
    
    <!-- Status Cores -->
    <Color x:Key="SimNextSuccess">#2E7D32</Color>          <!-- Verde -->
    <Color x:Key="SimNextWarning">#F57C00</Color>          <!-- Laranja -->
    <Color x:Key="SimNextError">#C62828</Color>            <!-- Vermelho -->
    <Color x:Key="SimNextInfo">#0097A7</Color>             <!-- Ciano -->
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="SimNextPrimaryBrush" Color="{StaticResource SimNextPrimary}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource SimNextPrimary}"/>
    <SolidColorBrush x:Key="SimNextAccentBrush" Color="{StaticResource SimNextAccent}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource SimNextAccent}"/>
    <SolidColorBrush x:Key="SimNextBackgroundBrush" Color="{StaticResource SimNextBackground}"/>
    <SolidColorBrush x:Key="Bg" Color="{StaticResource SimNextBackground}"/>
    <SolidColorBrush x:Key="SimNextSurfaceBrush" Color="{StaticResource SimNextSurface}"/>
    <SolidColorBrush x:Key="Card" Color="{StaticResource SimNextSurface}"/>
    <SolidColorBrush x:Key="SimNextTextBrush" Color="{StaticResource SimNextTextPrimary}"/>
    <SolidColorBrush x:Key="FgPrimary" Color="{StaticResource SimNextTextPrimary}"/>
    <SolidColorBrush x:Key="SimNextTextSecondaryBrush" Color="{StaticResource SimNextTextSecondary}"/>
    <SolidColorBrush x:Key="SimNextBorderBrush" Color="{StaticResource SimNextBorder}"/>
    <SolidColorBrush x:Key="Border" Color="{StaticResource SimNextBorder}"/>
    <SolidColorBrush x:Key="Panel" Color="{StaticResource SimNextSurfaceDark}"/>
    
    <SolidColorBrush x:Key="SimNextSuccessBrush" Color="{StaticResource SimNextSuccess}"/>
    <SolidColorBrush x:Key="SimNextWarningBrush" Color="{StaticResource SimNextWarning}"/>
    <SolidColorBrush x:Key="SimNextErrorBrush" Color="{StaticResource SimNextError}"/>
    <SolidColorBrush x:Key="SimNextInfoBrush" Color="{StaticResource SimNextInfo}"/>
    
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource SimNextPrimary}" Offset="0"/>
        <GradientStop Color="{StaticResource SimNextPrimaryLight}" Offset="1"/>
    </LinearGradientBrush>

    <!-- ===== ESTILOS GLOBAIS ===== -->
    
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource SimNextBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SimNextTextBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Background" Value="{StaticResource SimNextPrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SimNextPrimaryLight}"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource SimNextTextMuted}"/>
                <Setter Property="Foreground" Value="#999999"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource SimNextAccentBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF8F00"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="OutlineButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource SimNextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource SimNextPrimaryBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SimNextSurfaceBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SimNextTextBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <Style x:Key="Heading1" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <Style x:Key="Heading2" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <Style x:Key="Heading3" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="Body1" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <Style x:Key="Body2" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource SimNextTextSecondaryBrush}"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Background" Value="{StaticResource SimNextSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SimNextTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SimNextBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Background" Value="{StaticResource SimNextSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SimNextTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SimNextBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource SimNextTextBrush}"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <!-- ===== CARTÕES (Card Style) ===== -->
    <ControlTemplate x:Key="CardTemplate" TargetType="Border">
        <Border Background="{StaticResource SimNextBackgroundBrush}"
                BorderBrush="{StaticResource SimNextBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.08"/>
            </Border.Effect>
            <ContentPresenter/>
        </Border>
    </ControlTemplate>

    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Template" Value="{StaticResource CardTemplate}"/>
    </Style>

    <!-- ===== BADGES ===== -->
    <Style x:Key="BadgeSuccess" TargetType="Border">
        <Setter Property="Background" Value="#E8F5E9"/>
        <Setter Property="BorderBrush" Value="{StaticResource SimNextSuccessBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style x:Key="BadgeWarning" TargetType="Border">
        <Setter Property="Background" Value="#FFF3E0"/>
        <Setter Property="BorderBrush" Value="{StaticResource SimNextWarningBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style x:Key="BadgeError" TargetType="Border">
        <Setter Property="Background" Value="#FFEBEE"/>
        <Setter Property="BorderBrush" Value="{StaticResource SimNextErrorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- ===== ESTILOS DE NAVEGAÇÃO ===== -->
    
    <Style x:Key="ModernNavButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate TargetType="Button">
                <Border Background="{TemplateBinding Background}" 
                        CornerRadius="6"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="White" Opacity="0.2"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="White" Opacity="0.3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ===== ANIMAÇÕES ===== -->
    <Storyboard x:Key="FadeIn">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.3"/>
    </Storyboard>

    <Storyboard x:Key="SlideIn">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                         From="50" To="0" Duration="0:0:0.3"/>
    </Storyboard>

</ResourceDictionary>
