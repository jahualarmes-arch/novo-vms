                    <TextBlock Text="Classes (separar por vÃ­rgula)" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtClasses" Height="32" Text="person" Margin="0,0,0,12"/>

                    <TextBlock Text="ConfianÃ§a MÃ­nima" Margin="0,0,0,4"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
