                    <Border Background="#0A0A0A" CornerRadius="8">
                        <Grid>
                            <!-- Host de vÃ­deo -->
                            <ContentControl x:Name="VideoPreviewHost"/>
                            
                            <!-- Overlay do editor -->
                            <controls:ZoneEditor x:Name="ZoneEditor" IsEditing="True"/>
                            
                            <!-- Placeholder quando nÃ£o hÃ¡ vÃ­deo -->
                            <TextBlock x:Name="TxtPlaceholder" 
                                       Text="Clique em 'Abrir Preview' para visualizar a cÃ¢mera" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Opacity="0.5"/>
                        </Grid>
                    </Border>
                </Grid>

                <StackPanel Grid.Row="2" Margin="0,12,0,0">
                    <TextBlock x:Name="TxtPoints" Text="Pontos: 0" Opacity="0.8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Painel Direito - Lista de Regras -->
        <Border Grid.Column="2" Style="{DynamicResource CardBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="ðŸ“‹ Regras Existentes" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                <ListView Grid.Row="1" x:Name="LvRules" Background="Transparent" BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource Card}" CornerRadius="8" Padding="10" Margin="0,0,0,6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" Fill="{Binding Color}" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Row="1" Opacity="0.7" Margin="0,4,0,0">
                                        <Run Text="CH"/><Run Text="{Binding Channel}"/> â€¢ 
