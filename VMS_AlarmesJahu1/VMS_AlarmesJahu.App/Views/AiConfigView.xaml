                    <Button x:Name="BtnPreview" Content="ðŸ‘ï¸ Abrir Preview" Height="38"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Painel Central - Editor Visual -->
        <Border Grid.Column="1" Style="{DynamicResource CardBorder}" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Editor de Zona" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="Clique para adicionar pontos â€¢ Clique direito para remover â€¢ Arraste para mover" 
