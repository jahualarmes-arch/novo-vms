                    <TextBlock Text="Dispositivo" Margin="0,0,0,4"/>
                    <ComboBox x:Name="CbDevice" Height="32" DisplayMemberPath="Name" Margin="0,0,0,12"/>

                    <TextBlock Text="Canal" Margin="0,0,0,4"/>
                    <ComboBox x:Name="CbChannel" Height="32" Margin="0,0,0,12"/>

                    <TextBlock Text="Tipo de Regra" Margin="0,0,0,4"/>
