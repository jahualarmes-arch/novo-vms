                    <CheckBox x:Name="ChkEnabled" Content="Regra Habilitada" IsChecked="True" Margin="0,0,0,16"/>

                    <Button x:Name="BtnSave" Content="ðŸ’¾ Salvar Regra" Height="38" Margin="0,0,0,8"/>
