                        </Grid.ColumnDefinitions>
                        <Slider x:Name="SliderConf" Minimum="0.1" Maximum="0.9" Value="0.35" TickFrequency="0.05"/>
                        <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=SliderConf, StringFormat={}{0:P0}}" 
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>

                    <TextBlock Text="Cooldown (segundos)" Margin="0,0,0,4"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="SliderCooldown" Minimum="3" Maximum="60" Value="10"/>
                        <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=SliderCooldown, StringFormat={}{0:0}s}" 
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>

                    <TextBlock Text="Cor" Margin="0,0,0,4"/>
                    <ComboBox x:Name="CbColor" Height="32" Margin="0,0,0,16" SelectedIndex="0">
                        <ComboBoxItem Content="ðŸ”´ Vermelho" Tag="#FF0000"/>
                        <ComboBoxItem Content="ðŸŸ¢ Verde" Tag="#00FF00"/>
